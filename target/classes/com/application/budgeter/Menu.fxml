<!-- 
Menu.fxml is imported into BudgetPage.fxml, DashboardPage.fxml, and ExpensePage.fxml and is used as a navigation menu for the application. 
-->

<AnchorPane minHeight="600.0" minWidth="220.0" fx:id="menuPage" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml" fx:controller="com.application.budgeter.MenuController">
    <children>
        <!-- Title (Menu) -->
        <Label fx:id="menuTitle" alignment="CENTER" style="&#10;" text="Menu" textAlignment="CENTER" textFill="#726d6d" wrapText="false">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <!-- Dashboard button -->
        <!-- not scaling proportionately-->
        <Button fx:id="dashboardNavButton" mnemonicParsing="false" onAction="#switchToDashboard" />
        
        <!-- Expense button -->
        <Button fx:id="expenseNavButton" mnemonicParsing="false" onAction="#switchToExpense" />

        <!-- Budget button -->
        <Button fx:id="budgetNavButton" mnemonicParsing="false" onAction="#switchToBudget" />

    </children>
</AnchorPane>